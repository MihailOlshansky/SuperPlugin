<idea-plugin>
    <id>itmo.po.testPlugin</id>
    <name>test</name>
    <vendor email="" url="">ITMO</vendor>

    <description><![CDATA[
    It's a plugin we made by loosing our blood and selves... Please give us 25 points...
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
