    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="TranslateAndReplaceAction" class="TranslateAndReplaceAction" text="Test Action" description="Tasty">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl T"/>
        </action>
        <action id="ChangeLanguagesAction" class="ChangeLanguagesAction" text="Change Languages Action"
                description="Changing languages">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl L"/>
        </action>
    </actions>
</idea-plugin>